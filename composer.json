    "homepage": "http://brightcloudstudio.com/",
    "keywords": ["contao", "isotope", "maximum", "cart", "quantity", "bright", "cloud", "studio"],
    "type": "contao-module",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name":"Bright Cloud Studio",
            "homepage":"https://brightcloudstudio.com"
        }
    ],
    "require":{
        "php": "^8.0",
        "contao/core-bundle": "^4.13"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\": [
                "system/modules/isotope_maximum_cart_quantity/library/Bcs"
            ]
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/isotope_maximum_cart_quantity": "system/modules/isotope_maximum_cart_quantity"
